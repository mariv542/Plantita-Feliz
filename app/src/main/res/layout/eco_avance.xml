<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Barra superior -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#2E7D32"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Botón atrás -->
            <ImageButton
                android:id="@+id/btn_ecoAvance_regresar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_btn_round_green"
                android:src="@drawable/icon_btn_atras"
                app:tint="@color/black"
                android:scaleType="centerInside"
                android:contentDescription="@string/desc_btn_back"/>

            <!-- Título -->
            <TextView
                android:id="@+id/titleEcoAvance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="EcoAvance"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Spinner para seleccionar planta -->
        <Spinner
            android:id="@+id/spinnerPlantas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Nombre de la planta seleccionada -->
        <TextView
            android:id="@+id/txtNombrePlanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Planta"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerPlantas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Imagen de Dashboard o gráfico -->
        <!-- Gráfico de Temperatura y Humedad Ambiental -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartAmbiente"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtNombrePlanta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Gráfico de Humedad del Suelo -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartSuelo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/chartAmbiente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contenedor de tarjetas del Dashboard -->
        <LinearLayout
            android:id="@+id/cardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/chartSuelo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Card Temperatura -->
            <LinearLayout
                android:id="@+id/cardTemperatura"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/bg_light_gray_rounded">

                <TextView
                    android:id="@+id/txtTemperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- °C"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperatura"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <!-- Card Humedad del Suelo -->
            <LinearLayout
                android:id="@+id/cardHumedadSuelo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/bg_light_gray_rounded">

                <TextView
                    android:id="@+id/txtHumedadSuelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- %"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humedad del Suelo"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <!-- Card Humedad Ambiental -->
            <LinearLayout
                android:id="@+id/cardHumedadAmbiental"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/bg_light_gray_rounded">

                <TextView
                    android:id="@+id/txtHumedadAmbiental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- %"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humedad Ambiental"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>
        </LinearLayout>


        <include
            layout="@layout/footer_gps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
