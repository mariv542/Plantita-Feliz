<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eco_avance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#2E7D32"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clipToOutline="true"
        android:backgroundTintMode="src_in"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón atrás -->
        <ImageButton
            android:id="@+id/btn_ecoAvance_regresar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_btn_round_green"
            android:src="@drawable/icon_btn_atras"
            app:tint="@color/black"
            android:scaleType="centerInside"
            android:contentDescription="@string/desc_btn_back"/>

        <!-- Título -->
        <TextView
            android:id="@+id/titleEcoAvance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="EcoAvance"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Gráfico -->

    <!-- Contenedor de cards -->
    <ImageView
        android:id="@+id/chartView"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Chart"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_diagrama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <LinearLayout
        android:id="@+id/cardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/chartView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card Edad -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/bg_light_gray_rounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17yr"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <!-- Card Peso -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/bg_light_gray_rounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="68kg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <!-- Card Calorías -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/bg_light_gray_rounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="978kcal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Intake"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>