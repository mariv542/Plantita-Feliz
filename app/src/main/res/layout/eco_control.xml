<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eco_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#2E7D32"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_ecoControl_regresar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_btn_round_green"
            android:src="@drawable/icon_btn_atras"
            app:tint="@color/black"
            android:scaleType="centerInside"
            android:contentDescription="@string/desc_btn_back"/>

        <TextView
            android:id="@+id/titleEcoControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="EcoControl"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- TextView de parámetros elegidos -->
    <TextView
        android:id="@+id/textParametrosElegidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Elegir Parametros"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto para seleccionar planta -->
    <TextView
        android:id="@+id/textElijaPlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elija su planta"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textParametrosElegidos"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Spinner para seleccionar planta del usuario -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_light_gray_rounded"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textElijaPlanta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_plant"/>

        <Spinner
            android:id="@+id/spinnerPlantas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- Texto para seleccionar parámetro (opcional) -->
    <TextView
        android:id="@+id/textElijaParametro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elija el parámetro deseado (opcional)"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputContainer"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Spinner Wiki -->
    <LinearLayout
        android:id="@+id/wikiContainer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_light_gray_rounded"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textElijaParametro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_plant"/>

        <Spinner
            android:id="@+id/spinnerWiki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- Sliders y etiquetas -->
    <LinearLayout
        android:id="@+id/slidersContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/wikiContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Humedad Ambiental -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humedad Ambiental"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderAmbiental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/labelAmbientalRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min - Max %"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"/>

        <!-- Humedad de Suelo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humedad De Suelo"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/labelHumidityRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min - Max %"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"/>

        <!-- Temperatura -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="50"
            android:stepSize="0.5"/>

        <TextView
            android:id="@+id/labelTemperatureRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min - Max ºC"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:backgroundTint="#2E7D32"
        android:text="Guardar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slidersContainer"
        app:layout_constraintVertical_bias="0.106" />

    <include
        layout="@layout/footer_gps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
