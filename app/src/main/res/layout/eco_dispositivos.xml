<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dispositivos_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.dispositivos_activity">

    <!-- Header verde -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón atrás -->
        <ImageButton
            android:id="@+id/btn_dispositivos_regresar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_btn_round_green"
            android:src="@drawable/icon_btn_atras"
            app:tint="@color/black"
            android:scaleType="centerInside"
            android:contentDescription="@string/desc_btn_back"/>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Dispositivos Vinculados"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Contador -->
    <TextView
        android:id="@+id/txtCantidadPlantas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando plantas..."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Lista de plantas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPlantas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/txtCantidadPlantas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer GPS -->
    <include
        layout="@layout/footer_gps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
