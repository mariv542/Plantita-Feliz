<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_plantas"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen de la planta (arriba) -->

        <!-- Títulos -->
        <ImageView
            android:id="@+id/imgHumedad"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Estado de la planta"
            android:scaleType="fitCenter"
            android:src="@drawable/planta_normal" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una opción"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"/>

        <!-- Grid con botones -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="32dp"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

            <!-- EcoAvance -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_square"
                android:backgroundTint="@color/green"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btn_menu_ecoAvance"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_water64"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoAvance"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- EcoAviso -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_square"
                android:backgroundTint="@color/green">

                <ImageButton
                    android:id="@+id/btn_menu_ecoAviso"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_notificacion64"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoAviso"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- EcoControl -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_square"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/green">

                <ImageButton
                    android:id="@+id/btn_menu_ecoControl"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_devices64"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoControl"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- EcoPerfil -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_square"
                android:backgroundTint="@color/green">

                <ImageButton
                    android:id="@+id/btn_menu_perfil"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_person64"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoPerfil"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- EcoPlanta -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_square"
                android:backgroundTint="@color/green"
                android:layout_columnSpan="2"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/btn_menu_ecoPlanta"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/green"
                    android:src="@drawable/ic_plant64"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoPlanta"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </GridLayout>

    </LinearLayout>

    <include
        layout="@layout/footer_gps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
