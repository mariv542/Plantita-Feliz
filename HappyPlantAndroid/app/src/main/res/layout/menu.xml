<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/plantas"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- Títulos -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una opción"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"/>

        <!-- Grid con botones -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="32dp"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

            <!-- EcoAvance -->
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="EcoAvance"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:background="@drawable/btn_square"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"/>
            <!--                android:drawableTop="@drawable/ic_avance"-->

            <!-- EcoAviso -->
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="EcoAviso"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:background="@drawable/btn_square"/>
            <!--                android:drawableTop="@drawable/ic_aviso"-->

            <!-- EcoControl -->
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="EcoControl"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:background="@drawable/btn_square"
                android:layout_marginBottom="16dp"/>
            <!--                android:drawableTop="@drawable/ic_control"-->

            <!-- EcoPerfil -->
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="EcoPerfil"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:background="@drawable/btn_square"/>
            <!--                android:drawableTop="@drawable/ic_perfil"-->

            <!-- EcoPlanta -->
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="EcoPlanta"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:background="@drawable/btn_square"
                android:layout_gravity="center"
                android:layout_columnSpan="2"/>
            <!--                android:drawableTop="@drawable/ic_planta"-->
        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>